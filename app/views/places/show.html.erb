<h1><%= @place.name %></h1>

<h2>My Posts</h2>
<% for post in @place.posts %>
  <h3><%= post.title %></h3>
  <h4><%= post.posted_on %></h4>
  <p><%= post.description %></p>
<% end %>

<div class="row">
 <div class="col-sm-9">
 </div>
 
 <div class="col-sm-3 text-end">
  <a href="/posts/new/" class="btn btn-success">New Post</a>
 </div>
</div>


<p>
  <a href="/places">Back to All Places</a>
</p>