<h1>New Post</h1>

<% if @current_user %>
 <%= form_with model: @post do |form| %>
    <div class="mb-2">
    <p><%= form.label "title", class: "form-label" %></p>
    <p><%= form.text_field "title" %></p>
    </div>

    <div class="mb-2">
    <p><%= form.label "description", class: "form-label" %></p>
    <p><%= form.text_field "description" %></p>
    </div>

    <div class="mb-2">
    <p><%= form.label "posted_on", class: "form-label" %></p>
    <p><%= form.date_field "posted_on" %></p>
    </div>
    
    <div class="mb-2"> 
    <p><%= form.label "uploaded_image", class: "form-label" %></p>
    <p><%= form.file_field "uploaded_image", accept: "image/png,image/jpg,image/jpeg", class: "form-control" %></p>
    </div>

    <%= form.submit "Create Post", class: "btn btn-primary" %>
 <% end %>
<% else %>
  You must first <a href="/sessions/new">login</a> to post.
<% end %>